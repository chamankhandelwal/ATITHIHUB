<% layout("layouts/bolierplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <br>
                <br>

                <h3>Add your's property</h3>
                <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input type="text" name="listing[title]" id="title" required class="form-control"
                            placeholder="Ex: Luxury Villa with Private Pool">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a title.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea name="listing[description]" id="description" class="form-control" required></textarea>
                        <div class="valid-feedback">
                            Perfect description!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a description
                        </div>

                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-lable">Upload Image</label>
                        <input type="file" name="listing[image]" id="image" class="form-control" required>

                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-lable">Price</label>
                            <input type="text" name="listing[price]" id="price" required class="form-control"
                                placeholder="Ex: â‚¹3,500">
                            <div class="valid-feedback">
                                Price looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a price.
                            </div>
                        </div>

                        <div class="mb-3 col-md-4">
                            <label for="location" class="form-lable">Location</label>
                            <input type="text" name="listing[location]" id="location" required class="form-control"
                                placeholder="Ex: Jaipur, Rajasthan">
                            <div class="valid-feedback">
                                Location set!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a location.
                            </div>
                        </div>

                        <div class="mb-3 col-md-4">
                            <label for="country" class="form-lable">Country</label>
                            <input type="text" name="listing[country]" id="country" class="form-control"
                                placeholder="Ex: India">
                            <div class="valid-feedback">
                                Country added!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a country.
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-dark add-btn">Add</button>
                    <br>
                    <br>
                </form>
            </div>
        </div>

    </body>